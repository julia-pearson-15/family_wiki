<!-- this will be the changing html etc. for dynamic section of page -->
<!DOCTYPE html>
<html>
<head>
  <title>Get the Record</title>
  <link rel="stylesheet" type="text/css" href="/style.css">
  <script src="https://code.jquery.com/jquery-2.1.4.js"></script>
  <script type="text/javascript" src="/main.js"></script>
</head>
<body>
  <div id="topbar">
    <% if !@this_user %>
      <a id="login" href="/login">Log In</a>
    <%else%>
      <form action="/sessions" method="POST">
        <input type="hidden" name="_method" value="delete">
        <button id="login">Log out!</button>
      </form>
    <%end%>
    <a href="/" ><img id="logo" src="/img/logo.jpg"></a>
    <div id="toolbar">
      <div class="with-bar">
        <a href="/articles" class="nav">Articles</a href="/">
        <img class="underline" src="/img/underline2.jpg">
      </div> <!-- with-bar -->
      <div class="seperator"></div>
      <div class="with-bar">
        <a href="/categories" class="nav">Categories</a href="/">
        <img class="underline" src="/img/underline2.jpg">
      </div> <!-- with-bar -->
      <div class="seperator"></div>
      <div class="with-bar">
        <a href="/users" class="nav">Users</a href="/">
        <img class="underline" src="/img/underline2.jpg">
      </div> <!-- with-bar -->
    </div>
  </div> <!-- toolbar -->
  <div id="dynamic">
    <%= yield %>
  </div> <!-- dynamic -->
</body>
</html>
